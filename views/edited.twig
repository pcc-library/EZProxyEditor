{% extends 'card.twig' %}

{% block cardclass %}edited hide{% endblock %}

{% block cardheaderclass %}bg-warning{% endblock %}

{% block cardtitle %}
    Edited Stanzas
{% endblock %}

{% block cardbody %}

    <p class="card-text">These stanzas have been modified, but not yet saved to the configuration file.</p>

    <ul id="edited_stanzas" class="">


    </ul>

    <a target="_self" href="{{ baseurl }}/" class="card-link btn btn-secondary pull-left">Revert Changes</a>

    <button id="update_config_button" class="btn-success btn pull-right" type="submit" disabled>Save Changes</button>

{% endblock %}