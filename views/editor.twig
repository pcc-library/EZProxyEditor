<form class="form-horizontal">
    <fieldset>

        <!-- Form Name -->
        <legend>Edit Stanza</legend>

        <input type="hidden" id="previous_title" value="" />
        <input type="hidden" id="previous_body" value="" />
        <!-- Text input-->
        <div class="form-group">
            <label class="col-sm-3 col-form-label" for="stanza_title">Stanza Title</label>
            <div class="col-sm-9">
                <input id="stanza_title" name="stanza_title" type="text" placeholder="title" class="form-control input-md" readonly="">
            </div>
        </div>

        <!-- Textarea -->
        <div class="form-group">
            <label class="col-sm-3 col-form-label" for="stanzabody">Stanza Content</label>
            <div class="col-md-9">
                <textarea rows="8" class="form-control" id="stanza_body" name="stanzabody" readonly=""></textarea>
            </div>
        </div>

        <div class="form-group">

            <a href="javascript:void(0);" id="save_btn" class="btn-primary btn">Save</a>
            <a href="javascript:void(0);" id="revert_btn" class="btn-secondary btn">Undo Changes</a>

        </div>

    </fieldset>
</form>
