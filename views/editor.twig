{% extends 'threecols.twig' %}

{% block title %}EZproxy Editor{% endblock %}

{% block sidebar %}

    {% include 'sidebar.twig' with {'status': 'edit'} %}

{% endblock %}

{% block content %}

        {% include 'editor_form.twig' %}

{% endblock %}

{% block messages %}

    {% for message in messages %}

        {% include 'messages.twig' with { 'status': message[0], 'text': message[1]} %}

    {% endfor %}

{% endblock %}

{% block rightcol %}

    {% set widgets = ['edited','deleted','rssfeed'] %}
    {% include 'rightcol.twig' with {'widgets': widgets } %}

{% endblock %}

